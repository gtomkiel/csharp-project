<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crypto.MainPage"
             BackgroundColor="#1e1e1e">
        <ContentPage.Resources>
                <Style TargetType="Label"
                       x:Key="HeaderLabel">
                        <Setter Property="TextColor"
                                Value="White"/>
                        <Setter Property="FontSize"
                                Value="32"/>
                        <Setter Property="HorizontalOptions"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,20,0,10"/>
                </Style>
                <Style TargetType="Label"
                       x:Key="SubHeaderLabel">
                        <Setter Property="TextColor"
                                Value="#CCCCCC"/>
                        <Setter Property="FontSize"
                                Value="18"/>
                        <Setter Property="HorizontalOptions"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,0,0,20"/>
                </Style>
                <Style TargetType="Button"
                       x:Key="HistoryButton">
                        <Setter Property="BackgroundColor"
                                Value="#3498db"/>
                        <Setter Property="TextColor"
                                Value="White"/>
                        <Setter Property="CornerRadius"
                                Value="15"/>
                        <Setter Property="HeightRequest"
                                Value="40"/>
                        <Setter Property="HorizontalOptions"
                                Value="End"/>
                        <Setter Property="VerticalOptions"
                                Value="Center"/>
                        <Setter Property="Padding"
                                Value="15,0"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>
                <Style TargetType="Button"
                       x:Key="AddCryptoButton">
                        <Setter Property="BackgroundColor"
                                Value="#2ecc71"/>
                        <Setter Property="TextColor"
                                Value="White"/>
                        <Setter Property="CornerRadius"
                                Value="15"/>
                        <Setter Property="HeightRequest"
                                Value="50"/>
                        <Setter Property="HorizontalOptions"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,20,0,0"/>
                        <Setter Property="Padding"
                                Value="20,0"/>
                        <Setter Property="FontSize"
                                Value="16"/>
                </Style>
        </ContentPage.Resources>

        <Grid RowDefinitions="Auto,*"
              Padding="20">
                <!-- Header Section -->
                <StackLayout Grid.Row="0"
                             VerticalOptions="CenterAndExpand">
                        <Image Source="crypto_logo.png"
                               HeightRequest="100"
                               HorizontalOptions="Center"
                               Margin="0,30"/>
                        <Label Text="Crypto Price Checker"
                               Style="{StaticResource HeaderLabel}"/>
                        <Label Text="Track real-time cryptocurrency prices"
                               Style="{StaticResource SubHeaderLabel}"/>
                </StackLayout>

                <!-- Content Section -->
                <ScrollView Grid.Row="1">
                    <StackLayout x:Name="CryptoCardsContainer" Spacing="8">
                        <!-- Crypto cards will be added dynamically in code -->
                        
                        <!-- Add Crypto Button -->
                        <Button Text="+ Add Cryptocurrency" 
                                Style="{StaticResource AddCryptoButton}"
                                Clicked="OnAddCryptoClicked"/>
                    </StackLayout>
                </ScrollView>
        </Grid>
</ContentPage>
