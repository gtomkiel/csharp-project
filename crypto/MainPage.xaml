<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crypto.MainPage"
             BackgroundColor="#1e1e1e">
    <ContentPage.Resources>
        <Style TargetType="Label"
               x:Key="HeaderLabel">
            <Setter Property="TextColor"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="32" />
            <Setter Property="HorizontalOptions"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="0,20,0,10" />
        </Style>
        <Style TargetType="Label"
               x:Key="SubHeaderLabel">
            <Setter Property="TextColor"
                    Value="#CCCCCC" />
            <Setter Property="FontSize"
                    Value="18" />
            <Setter Property="HorizontalOptions"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="0,0,0,20" />
        </Style>
        <Style TargetType="Button"
               x:Key="HistoryButton">
            <Setter Property="BackgroundColor"
                    Value="#3498db" />
            <Setter Property="TextColor"
                    Value="White" />
            <Setter Property="CornerRadius"
                    Value="15" />
            <Setter Property="HeightRequest"
                    Value="35" />
            <Setter Property="HorizontalOptions"
                    Value="End" />
            <Setter Property="Padding"
                    Value="10,0" />
            <Setter Property="FontSize"
                    Value="12" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          Padding="20">
        <!-- Header Section -->
        <StackLayout Grid.Row="0"
                     VerticalOptions="CenterAndExpand">
            <Image Source="crypto_logo.png"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,30" />
            <Label Text="Crypto Price Checker"
                   Style="{StaticResource HeaderLabel}" />
            <Label Text="Track real-time cryptocurrency prices"
                   Style="{StaticResource SubHeaderLabel}" />
        </StackLayout>

        <!-- Content Section -->
        <StackLayout Grid.Row="1">
            <!-- Example card for a cryptocurrency -->
            <Frame BackgroundColor="#2e2e2e"
                   CornerRadius="10"
                   Margin="0,10">
                <StackLayout Padding="15">
                    <Label Text="Bitcoin (BTC)"
                           TextColor="White"
                           FontSize="20" />
                    <Label Text="$27,000"
                           TextColor="#4CAF50"
                           FontSize="16" />
                    <Button Text="View History"
                            Style="{StaticResource HistoryButton}"
                            Clicked="OnViewHistoryClicked" />
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#2e2e2e"
                   CornerRadius="10"
                   Margin="0,10">
                <StackLayout Padding="15">
                    <Label Text="Ethereum (ETH)"
                           TextColor="White"
                           FontSize="20" />
                    <Label Text="$1,800"
                           TextColor="#4CAF50"
                           FontSize="16" />
                    <Button Text="View History"
                            Style="{StaticResource HistoryButton}"
                            Clicked="OnViewHistoryClicked" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>