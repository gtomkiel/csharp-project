<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crypto.Views.HistoryPage"
             Title="Price History"
             BackgroundColor="#1e1e1e">
    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="HeaderLabel">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        <Style TargetType="Button" x:Key="BackButton">
            <Setter Property="BackgroundColor" Value="#3498db"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="Margin" Value="20,10"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header Section -->
        <StackLayout Grid.Row="0">
            <Label x:Name="CryptoNameLabel" 
                   Style="{StaticResource HeaderLabel}" />
            <Label Text="Historical Price Data" 
                   TextColor="#CCCCCC" 
                   FontSize="16" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Content Section -->
        <ScrollView Grid.Row="1">
            <StackLayout x:Name="HistoryContainer" Spacing="15">
                <!-- History items will be added here programmatically -->
                <Frame BackgroundColor="#2e2e2e" CornerRadius="8" Padding="15">
                    <StackLayout>
                        <Label Text="Loading price data..." TextColor="White" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>

        <!-- Footer Section -->
        <Button Text="Back to Main" 
                Grid.Row="2"
                Style="{StaticResource BackButton}"
                Clicked="OnBackClicked"/>
    </Grid>
</ContentPage>
