<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="crypto.Views.HistoryPage"
             Title="Price History"
             BackgroundColor="#1e1e1e">
    <ContentPage.Resources>
        <Style TargetType="Label"
               x:Key="HeaderLabel">
            <Setter Property="TextColor"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="HorizontalOptions"
                    Value="Center"/>
            <Setter Property="Margin"
                    Value="0,20,0,10"/>
        </Style>
        <Style TargetType="Button"
               x:Key="BackButton">
            <Setter Property="BackgroundColor"
                    Value="#3498db"/>
            <Setter Property="TextColor"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="15"/>
            <Setter Property="HeightRequest"
                    Value="45"/>
            <Setter Property="HorizontalOptions"
                    Value="FillAndExpand"/>
            <Setter Property="Margin"
                    Value="20,10"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">
        <StackLayout Grid.Row="0">
            <Label x:Name="CryptoNameLabel"
                   Style="{StaticResource HeaderLabel}"/>
            <Label Text="Historical Price Data"
                   TextColor="#CCCCCC"
                   FontSize="16"
                   HorizontalOptions="Center"/>

            <!-- Timeframe Selector -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Text="Timeframe:"
                       TextColor="White"
                       VerticalOptions="Center"/>

                <Picker x:Name="TimeframePicker"
                        Grid.Column="1"
                        BackgroundColor="#2e2e2e"
                        TextColor="White"
                        ItemsSource="{Binding TimeframeOptions}"
                        SelectedIndex="{Binding SelectedTimeframeIndex}"
                        SelectedIndexChanged="OnTimeframeSelected"
                        WidthRequest="150"/>
            </Grid>
        </StackLayout>

        <Grid Grid.Row="1"
              Margin="0,20">
            <maui:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}">
            </maui:CartesianChart>
        </Grid>

        <Button Grid.Row="2"
                Text="Back"
                Style="{StaticResource BackButton}"
                Clicked="OnBackClicked"/>
    </Grid>
</ContentPage>
